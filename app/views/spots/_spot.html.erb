<% if (spot_counter==3) %>
<li class="last">	
<%else %>
<li>
<%end %>
	<div id="spot_<%= spot.id %>" class="spot"> 
	<div class="photo">
		<% if spot.photos.length > 0%>
			<% if spot.selected_photo_id %>
				<%= image_tag spot.photos.find_by_id(spot.selected_photo_id).data.url(:small) %>
			<% else %>
				<%= image_tag spot.photos.first.data.url(:small) %>
			<% end %>
		<% else  %>
		There is no Photo for this spot, yet. Feel free to add one.
		<% end %>
	</div>
	<p><%= link_to (spot.name), spot %></p>
	<div id="description">
		<p><%= spot.short_description %></p>
	</div>
	<div id='menu'>
		<%= link_to 'Editieren', edit_spot_path(spot) %> |
		<%= link_to 'Gefahrenstelle entfernen', spot, :confirm => 'Sind sie sicher?', :method => :delete %>	
	</div>
</div>	
</li>

