<h1>Listing spots</h1>
<%= javascript_include_tag 'overview_map' %>

<script type="text/javascript" 	src="http://tile.cloudmade.com/wml/latest/web-maps-lite.js"></script>
<script type="text/javascript">
	var spots=<%= raw @spots.to_json%>;
</script>
<%= raw @spots.to_json%>
<div id="map" style="width: 600px; height: 500px">
	<!-- the map is here -->
</div>
<%= link_to 'New spot', new_spot_path %>
<div id="clickme">
	click me to hide the list.
</div>
<br />
<div  id="spotsDetail">
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Description</th>
	    <th>Lat</th>
	    <th>Lng</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @spots.each do |spot| %>
	  <tr>
	    <td><%= spot.name %></td>
	    <td><%= spot.description %></td>
	    <td><%= spot.lat %></td>
	    <td><%= spot.lng %></td>
	    <td><%= link_to 'Show', spot %></td>
	    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
	    <td><%= link_to 'Destroy', spot, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />	
</div>


<% form_tag spots_path, :method => :get, :remote => true do %>
  <p>
  	<%= text_field_tag :search, params[:search] %>
	<div id="Submit">
		<%= submit_tag "Search", :name => nil %>
	</div>
	<div id="message">
		<%= render 'message' %>
	</div>
  </p>
<% end -%>

<script type="text/javascript" charset="utf-8">
	 $('#Submit').click(function() {
	  $('#message').html('<br />I told you it was not working!');
	});
	$('#clickme').click(function() {
		$('#spotsDetail').hide('slow')
	});
</script>



