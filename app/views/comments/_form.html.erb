
<%= form_for([@spot, @spot.comments.build], :remote => true) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>