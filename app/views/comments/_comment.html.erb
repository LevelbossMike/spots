<div id="comment_<%= comment.id %>" class="comment">
	<p>
	  <b>Author:</b>
	  <%= comment.commenter %>
	</p>

	<p>
	  <b>Kommentar:</b>
	  <%= comment.body %>
	</p>

	<p>
		<%= link_to 'Kommentar entfernen', [comment.spot, comment],
		 								:confirm => 'Sind sie sicher?',
										:method => :delete	%>
	</p>
</div>
